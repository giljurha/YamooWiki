<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user.SignupFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/userIdInput"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:hint="아이디"
        android:inputType="text"
        android:maxLength="30"
        app:layout_constraintBottom_toTopOf="@+id/userNickNameInput"
        app:layout_constraintEnd_toStartOf="@id/userIdChkBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/materialToolbar"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/userIdChkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/userIdInput"
        android:backgroundTint="@color/blue"
        android:text="중복확인"
        app:layout_constraintBaseline_toBaselineOf="@+id/userIdInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/userIdInput" />

    <EditText
        android:id="@+id/userNickNameInput"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:hint="닉네임"
        android:inputType="text"
        android:maxLength="30"
        app:layout_constraintBottom_toTopOf="@+id/userPwInput"
        app:layout_constraintEnd_toStartOf="@id/userNickNameChkBtn"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userIdInput" />

    <Button
        android:id="@+id/userNickNameChkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/blue"
        android:text="중복확인"
        app:layout_constraintBaseline_toBaselineOf="@+id/userNickNameInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userNickNameInput" />

    <EditText
        android:id="@+id/userPwInput"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/userPwChkInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userNickNameInput" />

    <EditText
        android:id="@+id/userPwChkInput"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:ems="10"
        android:hint="비밀번호 재입력"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/userPhoneInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPwInput" />

    <EditText
        android:id="@+id/userPhoneInput"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:hint="핸드폰번호"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/phoneCertInput"
        app:layout_constraintEnd_toStartOf="@+id/userPhoneChkBtn"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPwChkInput" />

    <Button
        android:id="@+id/userPhoneChkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/blue"
        android:text="인증"
        app:layout_constraintBaseline_toBaselineOf="@+id/userPhoneInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userPhoneInput" />

    <EditText
        android:id="@+id/phoneCertInput"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:hint="인증번호"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/nextProfileBtn"
        app:layout_constraintEnd_toStartOf="@id/phoneCertChkBtn"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPhoneInput" />

    <Button
        android:id="@+id/phoneCertChkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/blue"
        android:text="확인"
        app:layout_constraintBaseline_toBaselineOf="@+id/phoneCertInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/phoneCertInput" />

    <Button
        android:id="@+id/nextProfileBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/blue"
        android:text="다음"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phoneCertInput" />


</androidx.constraintlayout.widget.ConstraintLayout>